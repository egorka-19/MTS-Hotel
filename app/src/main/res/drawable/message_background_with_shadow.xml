<!-- res/drawable/message_background_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Едва заметная тень -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Светло-серый цвет тени -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Белый фон с меньшим смещением тени -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Белый цвет фона -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
